{
  "name": "@lezer/graffiticode",
  "version": "0.1.0",
  "description": "lezer-based Graffiticode grammar",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jeff Dyer",
  "license": "MIT",
  "devDependencies": {
    "@lezer/generator": "^1.0.0",
    "mocha": "^10.2.0",
    "rollup": "^2.52.2",
    "@rollup/plugin-node-resolve": "^9.0.0"
  },
  "dependencies": {
    "@lezer/common": "^1.2.0",
    "@lezer/highlight": "^1.0.0",
    "@lezer/lr": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/graffiticode/lezer-graffiticode.git"
  },
  "scripts": {
    "build": "lezer-generator src/graffiticode.grammar -o src/parser && rollup -c",
    "build-debug": "lezer-generator src/graffiticode.grammar --names -o src/parser && rollup -c",
    "prepare": "npm run build",
    "test": "npm run build && mocha test/test-graffiticode.js"
  }
}
